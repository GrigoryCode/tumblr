<div class="mb-4">
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </p>

  <p class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control"  %>
  </p>
  <br>
  <p class="form-group">
    <%= f.submit "Add comment", class: "btn btn-primary" %>
  </p>

<% end %>
</div>
