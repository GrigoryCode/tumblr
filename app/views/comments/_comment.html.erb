<div class="jumbotron">
  <div>
    <p><b><%= comment.name %></b></p>
    <p><%= comment.body %></p>
    <hr>
    <p class="text-muted"><%= time_ago_in_words(comment.created_at) %> ago</p>
  </div>
  <% if user_signed_in? %>
    <p><%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure? '} %></p>
  <% end %>
</div>
