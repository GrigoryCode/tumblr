<div class="card mb-4">
  <div class="card-body">
    <h4 class="jumbotron-heading"><%= comment.name %></h4>
    <p><%= comment.body %></p>
    <p class="text-muted">
      <%= time_ago_in_words(comment.created_at) %> ago
    </p>

  <% if user_signed_in? %>
    <p><%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure? '}, class: "btn btn-link" %></p>
  <% end %>
  </div>
</div>
